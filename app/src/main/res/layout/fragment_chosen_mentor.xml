<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mentors_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/mentors_pic"
            android:layout_width="191dp"
            android:layout_height="183dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/mentor_basicinfo"
            android:layout_width="169dp"
            android:layout_height="137dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/mentors_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bookingBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/layout_btn"
            android:text="@string/book"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/InfoView" />

        <Button
            android:id="@+id/subsribe_btn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/layout_btn"
            android:text="@string/subscribe"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/InfoView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/InfoView"
            android:layout_width="0dp"
            android:layout_height="265dp"
            android:layout_marginTop="-10dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mentors_pic">

            <ScrollView
                android:id="@+id/infoView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <LinearLayout
                    android:id="@+id/vertical_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mentor_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/mentor_competencies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="26sp" />

                    <LinearLayout
                        android:id="@+id/horisontal_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/comp_list1"
                            android:layout_width="143dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/comp_list2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/calendar_view"
            android:layout_width="293dp"
            android:layout_height="416dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.592"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.231">

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_btn"
                    android:text="@string/dismiss_calendar" />

                <Button
                    android:id="@+id/book_btn"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_btn"
                    android:text="@string/book" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>